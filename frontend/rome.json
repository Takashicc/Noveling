{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [".next"]
  },
  "formatter": {
    "ignore": [".next"],
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}
